@model VillaBookingApp.Web.ViewModels.ForgotPasswordVM

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_AuthLayout";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: calc(100vh - 100px);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="card shadow-lg border-0" style="border-radius: var(--radius-lg);">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="d-inline-flex align-items-center justify-content-center mb-3" style="width: 64px; height: 64px; background: var(--primary); border-radius: var(--radius-lg);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                </svg>
                            </div>
                            <h3 class="fw-bold mb-2">Reset your password</h3>
                            <p class="text-muted mb-0">Enter your email and we’ll send you a reset link.</p>
                        </div>

                        <form method="post">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                            <polyline points="22,6 12,13 2,6"></polyline>
                                        </svg>
                                    </span>
                                    <input asp-for="Email" class="form-control border-start-0 ps-0" placeholder="Enter your email" style="border-radius: 0 var(--radius) var(--radius) 0;" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <input type="hidden" asp-for="RedirectUrl" />

                            <button type="submit" class="btn btn-lg w-100 text-white fw-bold mb-3" style="background: var(--primary); border-radius: var(--radius);">
                                Send reset link
                            </button>

                            <p class="text-center text-muted mb-0">
                                Remembered your password?
                                <a href="@Url.Action("Login", "Auth", new { returnUrl = Model.RedirectUrl })" class="fw-bold text-decoration-none" style="color: var(--primary);">Sign in</a>
                            </p>
                        </form>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <a href="@Url.Action("Index", "Home")" class="text-muted text-decoration-none">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
