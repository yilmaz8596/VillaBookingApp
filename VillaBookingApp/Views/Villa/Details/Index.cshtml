@model VillaBookingApp.Web.ViewModels.VillaVM

@{
    ViewData["Title"] = Model.Name;
}

<!-- Villa Hero Image -->
<section class="position-relative" style="height: 60vh; min-height: 400px; margin-top: 70px; overflow: hidden;">
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" class="w-100 h-100" style="object-fit: cover;" alt="@Model.Name">
    }
    else
    {
        <div class="w-100 h-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, var(--primary) 0%, var(--chart-3) 100%);">
            <svg xmlns="http://www.w3.org/2000/svg" width="128" height="128" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="1.5">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                <polyline points="9 22 9 12 15 12 15 22"></polyline>
            </svg>
        </div>
    }
    <!-- Gradient Overlay -->
    <div class="position-absolute bottom-0 start-0 w-100 p-4" style="background: linear-gradient(to top, rgba(0,0,0,0.8), transparent); height: 200px;">
        <div class="container position-absolute bottom-0 start-50 translate-middle-x pb-4">
            <div class="row">
                <div class="col">
                    <h1 class="display-3 fw-bold text-white mb-2">@Model.Name</h1>
                    <p class="text-white-50 mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align: middle; margin-right: 4px;">
                            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                            <circle cx="12" cy="10" r="3"></circle>
                        </svg>
                        Luxury Villa • ID: @Model.Id
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="py-5" style="background: var(--background);">
    <div class="container">
        <div class="row g-4">
            <!-- Left Column - Villa Information -->
            <div class="col-lg-8">
                <!-- Quick Stats Cards -->
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <div class="card border-0 h-100" style="background: var(--accent);">
                            <div class="card-body p-4 d-flex align-items-center gap-3">
                                <div class="rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width: 60px; height: 60px; background: var(--primary);">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="9" cy="7" r="4"></circle>
                                        <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"></path>
                                    </svg>
                                </div>
                                <div>
                                    <div class="h3 fw-bold mb-0">@Model.Occupancy</div>
                                    <div class="text-muted small">Guests</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card border-0 h-100" style="background: var(--accent);">
                            <div class="card-body p-4 d-flex align-items-center gap-3">
                                <div class="rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width: 60px; height: 60px; background: var(--primary);">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                        <line x1="3" y1="9" x2="21" y2="9"></line>
                                        <line x1="9" y1="21" x2="9" y2="9"></line>
                                    </svg>
                                </div>
                                <div>
                                    <div class="h3 fw-bold mb-0">@Model.Sqft.ToString("N0")</div>
                                    <div class="text-muted small">Square Feet</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card border-0 h-100" style="background: var(--accent);">
                            <div class="card-body p-4 d-flex align-items-center gap-3">
                                <div class="rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width: 60px; height: 60px; background: var(--primary);">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                                        <path d="M12 2v20M2 12h20"></path>
                                    </svg>
                                </div>
                                <div>
                                    <div class="h3 fw-bold mb-0">4.9</div>
                                    <div class="text-muted small">Rating</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Description Card -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h3 class="fw-bold mb-4">About This Villa</h3>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="text-muted mb-0" style="line-height: 1.8; font-size: 1.05rem;">@Model.Description</p>
                        }
                        else
                        {
                            <p class="text-muted mb-0" style="line-height: 1.8; font-size: 1.05rem;">
                                Experience unparalleled luxury in this stunning villa. Featuring breathtaking views, modern amenities,
                                and world-class service, this property offers the perfect retreat for your dream vacation.
                                Immerse yourself in comfort and elegance while creating unforgettable memories.
                            </p>
                        }
                    </div>
                </div>

                <!-- Amenities Card -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h3 class="fw-bold mb-4">Amenities & Features</h3>

                        @if (Model.Amenities is { Count: > 0 })
                        {
                            <div class="row g-3">
                                @foreach (var amenity in Model.Amenities)
                                {
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center gap-3 p-3 rounded" style="background: var(--background);">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                 viewBox="0 0 24 24" fill="none" stroke="var(--primary)" stroke-width="2">
                                                <polyline points="20 6 9 17 4 12"></polyline>
                                            </svg>
                                            <span class="fw-semibold">@amenity.Name</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted mb-0">No amenities listed for this villa.</p>
                        }
                    </div>
                </div>

                <!-- Property Details Card -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h3 class="fw-bold mb-4">Property Details</h3>
                        <div class="row g-4">
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <span class="text-muted d-block mb-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align: middle; margin-right: 4px;">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <polyline points="12 6 12 12 16 14"></polyline>
                                        </svg>
                                        Created Date
                                    </span>
                                    <span class="fw-semibold fs-5">@Model.CreatedDate.ToString("MMM dd, yyyy")</span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <span class="text-muted d-block mb-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align: middle; margin-right: 4px;">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <polyline points="12 6 12 12 16 14"></polyline>
                                        </svg>
                                        Last Updated
                                    </span>
                                    <span class="fw-semibold fs-5">@Model.UpdatedDate.ToString("MMM dd, yyyy")</span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <span class="text-muted d-block mb-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align: middle; margin-right: 4px;">
                                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                        </svg>
                                        Property ID
                                    </span>
                                    <span class="fw-semibold fs-5">#@Model.Id.ToString("D5")</span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <span class="text-muted d-block mb-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align: middle; margin-right: 4px;">
                                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                            <polyline points="22 4 12 14.01 9 11.01"></polyline>
                                        </svg>
                                        Availability
                                    </span>
                                    <span class="badge bg-success px-3 py-2 fs-6">Available</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Booking Card -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-lg sticky-top" style="top: 90px;">
                    <div class="card-body p-4">
                        <!-- Price -->
                        <div class="text-center mb-4 pb-4 border-bottom">
                            <div class="display-3 fw-bold mb-2" style="color: var(--primary);">
                                $@Model.Price.ToString("N0")
                            </div>
                            <p class="text-muted mb-0 fs-5">per night</p>
                        </div>

                        <!-- Booking Form -->
                        <form>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Check-in Date</label>
                                <input type="date" class="form-control form-control-lg">
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Check-out Date</label>
                                <input type="date" class="form-control form-control-lg">
                            </div>
                            <div class="mb-4">
                                <label class="form-label fw-semibold">Number of Guests</label>
                                <select class="form-select form-select-lg">
                                    @for (int i = 1; i <= Model.Occupancy; i++)
                                    {
                                        <option value="@i">@i Guest@(i > 1 ? "s" : "")</option>
                                    }
                                </select>
                            </div>

                            <!-- Price Breakdown -->
                            <div class="mb-4 p-3 rounded" style="background: var(--background);">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">$@Model.Price.ToString("N0") x 5 nights</span>
                                    <span class="fw-semibold">$@((Model.Price * 5).ToString("N0"))</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Service fee</span>
                                    <span class="fw-semibold">$@((Model.Price * 0.1).ToString("N0"))</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <span class="fw-bold">Total</span>
                                    <span class="fw-bold fs-5" style="color: var(--primary);">$@((Model.Price * 5 + Model.Price * 0.1).ToString("N0"))</span>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-lg w-100 text-white fw-bold mb-3" style="background: var(--primary); border-radius: var(--radius);">
                                Reserve Now
                            </button>

                            <p class="text-center text-muted small mb-0">You won't be charged yet</p>
                        </form>

                        <!-- Divider -->
                        <hr class="my-4">

                        <!-- Contact Info -->
                        <div class="text-center">
                            <p class="text-muted mb-3">Questions about this property?</p>
                            <button class="btn btn-outline-primary w-100 mb-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align: middle; margin-right: 8px;">
                                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                    <polyline points="22,6 12,13 2,6"></polyline>
                                </svg>
                                Contact Host
                            </button>
                            <button class="btn btn-outline-secondary w-100">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align: middle; margin-right: 8px;">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                </svg>
                                Virtual Tour
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Back to Villas Button -->
        <div class="row mt-5">
            <div class="col-12">
                <a asp-action="Index" asp-controller="Villa" class="btn btn-outline-secondary btn-lg px-5">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align: middle; margin-right: 8px;">
                        <path d="M19 12H5M12 19l-7-7 7-7" />
                    </svg>
                    Back to All Villas
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    @@media (max-width: 991px) {
        .sticky-top {
            position: relative !important;
            top: 0 !important;
        }
    }
</style>
