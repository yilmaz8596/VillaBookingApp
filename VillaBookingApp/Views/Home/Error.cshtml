@model ErrorViewModel

@{
    ViewData["Title"] = "Error";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - VillaBooking</title>

    <!-- Bootstrap + site.css -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --card-radius: 14px;
            --accent-bg: rgba(13,110,253,0.06); /* subtle accent */
            --error-accent: rgba(220,53,69,0.08);
        }

        html, body {
            height: 100%;
            background: linear-gradient(180deg, var(--background) 0%, rgba(0,0,0,0.02) 100%);
            font-family: var(--font-sans), 'DM Sans', sans-serif;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            color: var(--foreground);
        }

        .error-page {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 3rem 1rem;
        }

        .error-card {
            max-width: 920px;
            width: 100%;
            border: 0;
            border-radius: var(--card-radius);
            overflow: hidden;
            box-shadow: 0 12px 40px rgba(17,24,39,0.08);
        }

        .error-body {
            display: grid;
            grid-template-columns: 160px 1fr;
            gap: 1.25rem;
            align-items: center;
            padding: 2rem;
        }

        .illustration {
            width: 160px;
            height: 160px;
            border-radius: 12px;
            display:flex;
            align-items:center;
            justify-content:center;
            background: var(--error-accent);
            flex-shrink:0;
        }

        .illustration svg { width: 72px; height:72px; }

        .error-title {
            color: var(--primary);
            margin-bottom: .25rem;
            font-size: 1.5rem;
            font-weight: 700;
        }

        .error-sub {
            color: var(--foreground-muted);
            margin-bottom: .5rem;
        }

        .request-id {
            display:inline-block;
            margin-top: .5rem;
            padding: .35rem .8rem;
            background: rgba(0,0,0,0.04);
            border-radius: 999px;
            font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, 'Roboto Mono', 'Segoe UI Mono', monospace;
            font-size:.85rem;
            color:var(--foreground-muted);
        }

        .error-actions { margin-top: 1rem; display:flex; gap:.75rem; flex-wrap:wrap; }

        .error-footer { background: rgba(0,0,0,0.015); padding: .85rem 1.25rem; text-align:center; font-size:.875rem; color:var(--foreground-muted); }

        @@media (max-width: 768px) {
            .error-body { grid-template-columns: 1fr; text-align:center; padding:1.25rem; }
            .illustration { margin: 0 auto; }
            .error-actions { justify-content:center; }
            .error-title { font-size: 1.25rem; }
        }
    </style>
</head>
<body>
    <main class="error-page">
        <div class="card error-card">
            <div class="error-body">
                <div class="illustration" aria-hidden="true">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="var(--primary)" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="9"></circle>
                        <path d="M12 7v6"></path>
                        <circle cx="12" cy="17" r="0.6"></circle>
                    </svg>
                </div>

                <div>
                    <div class="d-flex align-items-start justify-content-between">
                        <div>
                            <div class="error-title">Something went wrong</div>
                            <div class="error-sub">We couldn't complete your request. This is likely temporary — try again or contact support.</div>
                        </div>
                    </div>

                    @if (Model?.ShowRequestId ?? false)
                    {
                        <div class="request-id" role="status" aria-live="polite">Request ID: @Model.RequestId</div>
                    }

                    <div class="error-actions">
                        <button type="button" class="btn btn-primary btn-lg" onclick='location.href="@Url.Action("Index", "Home")"'>
                            Back to Home
                        </button>
                        <button type="button" class="btn btn-outline-secondary btn-lg" onclick="location.reload()">Refresh</button>
                        <a class="btn btn-link btn-lg align-self-center" href="mailto:support@villabooking.local">Contact Support</a>
                    </div>

                    <hr class="my-3" />

                    <div class="small text-muted">
                        If you're debugging locally, set <code>ASPNETCORE_ENVIRONMENT</code> to <code>Development</code> to see detailed exception information.
                    </div>
                </div>
            </div>

            <div class="error-footer">
                &copy; @DateTime.Now.Year VillaBooking — Secure and reliable villa bookings
            </div>
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>