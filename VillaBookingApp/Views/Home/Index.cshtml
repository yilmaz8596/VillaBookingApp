@{
    ViewData["Title"] = "Luxury Villa Rentals";
}

<style>
    .hero-section {
        min-height: 100vh;
        background: linear-gradient(135deg, var(--primary) 0%, var(--chart-3) 100%);
        position: relative;
        display: flex;
        align-items: center;
        padding-top: 80px;
    }
    .hero-overlay {
        position: absolute;
        inset: 0;
        background: url('/assets/luxury-villa-with-ocean-view.jpg') center/cover;
        opacity: 0.15;
    }
    .feature-icon {
        width: 64px;
        height: 64px;
        background: var(--primary);
        color: white;
        border-radius: var(--radius-lg);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
    }
    .villa-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-xl);
    }
    .villa-card { transition: all 0.3s ease; }
    .author-avatar {
        width: 50px;
        height: 50px;
        background: var(--primary);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
    }
</style>

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="container position-relative" style="z-index: 2;">
        <div class="row justify-content-center text-center text-white">
            <div class="col-lg-10">
                <h1 class="display-1 fw-bold mb-4">
                    Discover Your<br/>
                    <span style="color: var(--accent);">Dream Villa</span>
                </h1>
                <p class="lead fs-3 mb-5 opacity-75">Experience luxury living in the world's most breathtaking destinations</p>
                <div class="d-flex gap-3 justify-content-center flex-wrap">
                    <a href="@Url.Action("Index", "Villa")" class="btn btn-light btn-lg px-5 py-3 fw-bold">Explore Villas</a>
                    <a href="#features" class="btn btn-outline-light btn-lg px-5 py-3 fw-bold">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
