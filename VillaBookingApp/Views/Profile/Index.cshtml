@{
    ViewData["Title"] = "Profile";
    Layout = "_Layout";
}

<section class="py-5" style="background: var(--background); min-height: 100vh;">
    <div class="container py-4">
        <!-- Page Header -->
        <div class="mb-4">
            <h2 class="fw-bold mb-1">My Profile</h2>
            <p class="text-muted mb-0">Manage your account and bookings</p>
        </div>

        <div class="row g-4">
            <!-- Profile Card -->
            <div class="col-12 col-lg-4">
                <div class="card border-0 shadow-sm" style="border-radius: var(--radius-lg);">
                    <div class="card-body p-4">
                        <!-- User Avatar & Info -->
                        <div class="text-center mb-4">
                            <div class="d-inline-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px; background: var(--primary); border-radius: 50%;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                            </div>
                            <h5 class="fw-bold mb-1">John Doe</h5>
                            <p class="text-muted small mb-0">john.doe@example.com</p>
                        </div>

                        <hr class="my-4" />

                        <!-- Quick Stats -->
                        <div class="row g-3 mb-4">
                            <div class="col-6">
                                <div class="text-center p-3" style="background: var(--accent); border-radius: var(--radius);">
                                    <div class="fw-bold h4 mb-0" style="color: var(--primary);">5</div>
                                    <div class="text-muted small">Total Bookings</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center p-3" style="background: var(--accent); border-radius: var(--radius);">
                                    <div class="fw-bold h4 mb-0" style="color: var(--primary);">2</div>
                                    <div class="text-muted small">Upcoming</div>
                                </div>
                            </div>
                        </div>

                        <!-- Quick Actions -->
                        <div class="d-grid gap-2">
                            <a href="#account-settings" class="btn btn-outline-secondary" style="border-radius: var(--radius);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align: middle; margin-right: 6px;">
                                    <circle cx="12" cy="12" r="3"></circle>
                                    <path d="M12 1v6m0 6v6"></path>
                                </svg>
                                Account Settings
                            </a>
                            <a href="#booking-history" class="btn btn-outline-secondary" style="border-radius: var(--radius);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align: middle; margin-right: 6px;">
                                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                    <line x1="16" y1="2" x2="16" y2="6"></line>
                                    <line x1="8" y1="2" x2="8" y2="6"></line>
                                    <line x1="3" y1="10" x2="21" y2="10"></line>
                                </svg>
                                My Bookings
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-12 col-lg-8">
                <!-- Account Settings Section -->
                <div id="account-settings" class="card border-0 shadow-sm mb-4" style="border-radius: var(--radius-lg);">
                    <div class="card-body p-4">
                        <h4 class="fw-bold mb-4">Account Settings</h4>

                        <form>
                            <div class="row g-3">
                                <div class="col-12 col-md-6">
                                    <label class="form-label fw-semibold">Full Name</label>
                                    <input type="text" class="form-control" placeholder="Enter your name" value="John Doe" style="border-radius: var(--radius);" />
                                </div>
                                <div class="col-12 col-md-6">
                                    <label class="form-label fw-semibold">Email</label>
                                    <input type="email" class="form-control" placeholder="Enter your email" value="john.doe@example.com" style="border-radius: var(--radius);" />
                                </div>
                                <div class="col-12 col-md-6">
                                    <label class="form-label fw-semibold">Phone Number</label>
                                    <input type="tel" class="form-control" placeholder="+1 (555) 000-0000" style="border-radius: var(--radius);" />
                                </div>
                                <div class="col-12 col-md-6">
                                    <label class="form-label fw-semibold">Country</label>
                                    <select class="form-select" style="border-radius: var(--radius);">
                                        <option selected>United States</option>
                                        <option>United Kingdom</option>
                                        <option>Turkey</option>
                                        <option>Germany</option>
                                    </select>
                                </div>
                            </div>

                            <div class="d-flex flex-column flex-sm-row gap-2 justify-content-end mt-4">
                                <button type="button" class="btn btn-outline-secondary" style="border-radius: var(--radius);">Cancel</button>
                                <button type="submit" class="btn text-white fw-semibold" style="background: var(--primary); border-radius: var(--radius);">Save Changes</button>
                            </div>
                        </form>

                        <hr class="my-4" />

                        <!-- Password & Security -->
                        <h5 class="fw-bold mb-3">Security</h5>
                        <button type="button" class="btn btn-outline-secondary" style="border-radius: var(--radius);">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align: middle; margin-right: 6px;">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                            </svg>
                            Change Password
                        </button>
                    </div>
                </div>

                <!-- Booking History Section -->
                <div id="booking-history" class="card border-0 shadow-sm" style="border-radius: var(--radius-lg);">
                    <div class="card-body p-4">
                        <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-3 mb-4">
                            <h4 class="fw-bold mb-0">Booking History</h4>
                            <select class="form-select w-auto" style="border-radius: var(--radius); min-width: 140px;">
                                <option selected>All Bookings</option>
                                <option>Upcoming</option>
                                <option>Completed</option>
                                <option>Cancelled</option>
                            </select>
                        </div>

                        <!-- Booking Cards -->
                        <div class="d-flex flex-column gap-3">
                            <!-- Booking Item 1 -->
                            <div class="border rounded p-3" style="border-radius: var(--radius-lg) !important;">
                                <div class="row g-3 align-items-center">
                                    <div class="col-12 col-md-8">
                                        <div class="d-flex flex-column flex-sm-row gap-3">
                                            <div class="flex-shrink-0">
                                                <div style="width: 80px; height: 80px; background: var(--accent); border-radius: var(--radius); display: flex; align-items: center; justify-content: center;">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="var(--primary)" stroke-width="2">
                                                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                                    </svg>
                                                </div>
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="fw-bold mb-1">Oceanview Villa</h6>
                                                <p class="text-muted small mb-2">Aug 12 – Aug 16, 2024 • 4 nights • 4 guests</p>
                                                <span class="badge bg-success">Completed</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-4 text-md-end">
                                        <div class="fw-bold h5 mb-2" style="color: var(--primary);">$1,280</div>
                                        <button class="btn btn-sm btn-outline-secondary w-100 w-md-auto" style="border-radius: var(--radius);">View Details</button>
                                    </div>
                                </div>
                            </div>

                            <!-- Booking Item 2 -->
                            <div class="border rounded p-3" style="border-radius: var(--radius-lg) !important;">
                                <div class="row g-3 align-items-center">
                                    <div class="col-12 col-md-8">
                                        <div class="d-flex flex-column flex-sm-row gap-3">
                                            <div class="flex-shrink-0">
                                                <div style="width: 80px; height: 80px; background: var(--accent); border-radius: var(--radius); display: flex; align-items: center; justify-content: center;">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="var(--primary)" stroke-width="2">
                                                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                                    </svg>
                                                </div>
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="fw-bold mb-1">Mountain Retreat</h6>
                                                <p class="text-muted small mb-2">Sep 03 – Sep 06, 2024 • 3 nights • 2 guests</p>
                                                <span class="badge" style="background: var(--accent); color: var(--primary);">Upcoming</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-4 text-md-end">
                                        <div class="fw-bold h5 mb-2" style="color: var(--primary);">$980</div>
                                        <button class="btn btn-sm btn-outline-secondary w-100 w-md-auto" style="border-radius: var(--radius);">View Details</button>
                                    </div>
                                </div>
                            </div>

                            <!-- Booking Item 3 -->
                            <div class="border rounded p-3" style="border-radius: var(--radius-lg) !important;">
                                <div class="row g-3 align-items-center">
                                    <div class="col-12 col-md-8">
                                        <div class="d-flex flex-column flex-sm-row gap-3">
                                            <div class="flex-shrink-0">
                                                <div style="width: 80px; height: 80px; background: var(--accent); border-radius: var(--radius); display: flex; align-items: center; justify-content: center;">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="var(--primary)" stroke-width="2">
                                                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                                    </svg>
                                                </div>
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="fw-bold mb-1">City Penthouse</h6>
                                                <p class="text-muted small mb-2">Dec 20 – Dec 24, 2024 • 4 nights • 3 guests</p>
                                                <span class="badge bg-warning text-dark">Pending</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-4 text-md-end">
                                        <div class="fw-bold h5 mb-2" style="color: var(--primary);">$1,740</div>
                                        <button class="btn btn-sm btn-outline-secondary w-100 w-md-auto" style="border-radius: var(--radius);">View Details</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Empty State (hidden when there are bookings) -->
                        <!-- Uncomment this when no bookings exist -->
                        <!--
                        <div class="text-center py-5">
                            <div class="d-inline-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px; background: var(--accent); border-radius: 50%;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="var(--primary)" stroke-width="2">
                                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                    <line x1="16" y1="2" x2="16" y2="6"></line>
                                    <line x1="8" y1="2" x2="8" y2="6"></line>
                                    <line x1="3" y1="10" x2="21" y2="10"></line>
                                </svg>
                            </div>
                            <h5 class="fw-bold mb-2">No bookings yet</h5>
                            <p class="text-muted mb-3">Start planning your dream vacation today</p>
                            <a href="@Url.Action("Index", "Villa")" class="btn text-white fw-semibold" style="background: var(--primary); border-radius: var(--radius);">Browse Villas</a>
                        </div>
                        -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
